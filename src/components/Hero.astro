---
import hero from "../assets/hero.jpg";
---

<div class="intro">
  <div class="hero">
    <div class="hero-image-container">
      <img src={hero.src} alt="Amtrak Adventure Hero" class="hero-image" />
    </div>
    <div class="hero-content">
      <div class="hero-text">
        <h1>Angus's Autumnal Amtrak Adventure 2023</h1>
        <p>
          Collection of postcards I created during my trip across the United
          States
        </p>
      </div>
    </div>
  </div>
</div>

<style>
  .intro {
    background: #091592;
    color: #ffffff;
    display: flex;
    justify-content: center;
  }

  .hero {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    max-width: 1400px;
  }

  .hero-image-container {
    flex: 1 1 0;
    display: flex;
    position: relative;
    overflow: hidden;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    max-height: 75vh;
    object-fit: cover;
  }

  .hero-content {
    flex: 1 1 0;
    display: flex;
  }

  .hero-text {
    padding: 40px;
  }

  .hero-text h1 {
    font-family: "Rubik Mono One", monospace;
    margin: 0 0 1rem 0;
  }

  .hero-text p {
    margin: 0;
  }

  @media (max-width: 768px) {
    .hero {
      display: flex;
      flex-direction: column;
    }

    .hero-image-container {
      flex: inherit;
      height: 50vh;
      width: 100vw;
    }
  }
</style>
