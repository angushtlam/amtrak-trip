---
// Import all postcards
import PostcardGallery from "../components/PostcardGallery";
import Hero from "../components/Hero.astro";
import Footer from "../components/Footer.astro";
import baltimore from "../assets/postcards/baltimore.jpg";
import baltimore_back from "../assets/postcards/baltimore_back.jpg";
import boston from "../assets/postcards/boston.jpg";
import boston_back from "../assets/postcards/boston_back.jpg";
import charleston from "../assets/postcards/charleston.jpg";
import charleston_back from "../assets/postcards/charleston_back.jpg";
import dover from "../assets/postcards/dover.jpg";
import dover_back from "../assets/postcards/dover_back.jpg";
import klamath_falls from "../assets/postcards/klamath_falls.jpg";
import klamath_falls_back from "../assets/postcards/klamath_falls_back.jpg";
import philadelphia from "../assets/postcards/philadelphia.jpg";
import philadelphia_back from "../assets/postcards/philadelphia_back.jpg";
import portland_me from "../assets/postcards/portland_me.jpg";
import portland_me_back from "../assets/postcards/portland_me_back.jpg";
import portland_or from "../assets/postcards/portland_or.jpg";
import portland_or_back from "../assets/postcards/portland_or_back.jpg";
import providence from "../assets/postcards/providence.jpg";
import providence_back from "../assets/postcards/providence_back.jpg";
import raleigh from "../assets/postcards/raleigh.jpg";
import raleigh_back from "../assets/postcards/raleigh_back.jpg";
import san_francisco from "../assets/postcards/san_francisco.jpg";
import san_francisco_back from "../assets/postcards/san_francisco_back.jpg";
import seattle from "../assets/postcards/seattle.jpg";
import seattle_back from "../assets/postcards/seattle_back.jpg";
import washington from "../assets/postcards/washington.jpg";
import washington_back from "../assets/postcards/washington_back.jpg";

// Create postcard array in alphabetical order
const postcards = [
  { name: "Baltimore", front: baltimore, back: baltimore_back },
  { name: "Boston", front: boston, back: boston_back },
  { name: "Charleston", front: charleston, back: charleston_back },
  { name: "Dover", front: dover, back: dover_back },
  { name: "Klamath Falls", front: klamath_falls, back: klamath_falls_back },
  { name: "Philadelphia", front: philadelphia, back: philadelphia_back },
  { name: "Portland, ME", front: portland_me, back: portland_me_back },
  { name: "Portland, OR", front: portland_or, back: portland_or_back },
  { name: "Providence", front: providence, back: providence_back },
  { name: "Raleigh", front: raleigh, back: raleigh_back },
  { name: "San Francisco", front: san_francisco, back: san_francisco_back },
  { name: "Seattle", front: seattle, back: seattle_back },
  { name: "Washington", front: washington, back: washington_back },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="192x192" href="/favicon-192.png" />
    <meta name="viewport" content="width=device-width, user-scalable=no" />
    <meta name="screen-orientation" content="portrait" />
    <meta name="generator" content={Astro.generator} />
    <title>Angus's Autumnal Amtrak Adventure 2023</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Rubik+Mono+One&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Hero />
    <div class="container">
      <PostcardGallery postcards={postcards} client:load />
    </div>
    <Footer />
  </body>
</html>

<style>
  body {
    margin: 0;
    padding: 0;
    font-family: Arial, Helvetica, sans-serif;
    font-weight: 600;
    background: #f5f5f5;
  }

  .container {
    max-width: 1400px;
    margin: -240px auto 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .container {
      margin: 0 auto;
    }
  }
</style>
